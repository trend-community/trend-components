    "@storybook/addon-actions": "5.0.10",
    "@storybook/addon-knobs": "5.0.10",
    "@storybook/react": "5.0.10",
    "@storybook/storybook-deployer": "2.8.1",
    "autoprefixer": "8.3.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-dev-expression": "0.2.1",
    "babel-plugin-transform-inline-environment-variables": "0.4.3",
    "babel-plugin-transform-react-remove-prop-types": "0.4.20",
    "clean-webpack-plugin": "0.1.19",
    "cross-env": "5.1.4",
    "css-loader": "2.1.1",
    "cssom": "0.3.2",
    "del-cli": "1.1.0",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.12.1",
    "eslint": "4.19.1",
    "fs-extra": "5.0.0",
    "glob": "7.1.2",
    "html-loader": "0.5.5",
    "html-webpack-plugin": "4.0.0-alpha.2",
    "husky": "1.0.0-rc.8",
    "jest": "23.6.0",
    "lerna": "3.13.3",
    "mini-css-extract-plugin": "0.4.0",
    "node-sass": "4.11.0",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "postcss-loader": "3.0.0",
    "raw-loader": "0.5.1",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-router-dom": "4.3.1",
    "react-test-renderer": "16.8.6",
    "sass-loader": "7.1.0",
    "scss-parser": "1.0.3",
    "storybook-readme": "5.0.2",
    "style-loader": "0.23.1",
    "stylelint": "10.0.1",
    "stylelint-config-standard": "18.3.0",
    "stylelint-order": "3.0.0",
    "stylelint-scss": "3.6.0",
    "terser-webpack-plugin": "1.1.0",
    "webpack": "4.30.0",
    "webpack-cli": "3.3.1",
    "webpack-dev-server": "3.3.1"
  },
  "description": "Trend components UI component library.",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "lerna run build --parallel",
    "build:dist:": "npm run clean && mkdir build && webpack --progress --colors",
    "build:dist:min": "mkdirp build && cross-env TC_ENV=production webpack -p --progress --colors",
    "clean": "npm-run-all --parallel clean:*",
    "clean:build": "del-cli build/** build",
    "dist": "npm-run-all --parallel build:*",
    "lint:css": "stylelint \"packages/**/*.scss\"",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "storybook:deploy": "storybook-to-ghpages",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run test",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ],
    "rules": {
      "scope-enum": [
        2,
        "always",
        [
          "button",
          "drawer",
          "focustrap",
          "helpers",
          "icon",
          "layout",
          "normalize",
          "state",
          "textfield",
          "theme",
          "topbar",
          "trend-components",
          "type",
          "package",
          "packages",
          "scripts",
          "src",
          "stories",
          "root"
        ]
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
